        <?php echo Profile::getGender($pro->gender); ?>

        </td>
        <?php echo Form::model($applicant, array('route' => array('vacancies.applicant', $applicant->id), 'id' => 'statusForm')); ?>

        <td>
        <?php echo Form::select('status', array(0 => 'Please wait for the response', 1 => 'Reject', 2 => 'Waitlist', 3 => 'Receive'), $applicant->status, array('id' => 'statusfor'.$applicant->id, 'onChange' => "updateStat($applicant->id)")); ?>

        </td>
        <td>
        <?php echo Form::close(); ?>

        <span id="message<?php echo $applicant->id; ?>"></span>
