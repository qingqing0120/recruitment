    </tfoot>
<tbody>
<?php foreach($applicants as $applicant): ?>
    <?php $profile = Profile::where('user_id', '=', $applicant->applicant_id)->get() ?>
    <?php foreach($profile as $pro): ?>
    <tr>
        <td>
        <?php if(file_exists(public_path().'\\uploads\\'.$pro->cv_file)): ?>
